@model Job
<div class="container-fluid pt-4 px-0">
    <div class="row g-4">
        <div class="col-lg-9">
            <div class="bg-light rounded h-100 p-4">
                <h3 class="mb-4 fw-bold text-primary">Detail Company</h3>
                <form method="post" class="row">
                    <input asp-for="Id" hidden />                    
                    <div class="form-floating mb-3 col-lg-6">
                        <input readonly asp-for="Title" type="text" class="form-control" id="floatingInput" placeholder="">
                        <label asp-for="Title" for="floatingInput"></label>
                        <span asp-validation-for="Title" class="text-danger m-2"></span>
                    </div>
                    <div class="form-floating mb-3 col-lg-6">
                        <input readonly asp-for="Salary" type="text" class="form-control" id="floatingInputIndustry" placeholder="">
                        <label asp-for="Salary" for="floatingInputIndustry"></label>
                        <span asp-validation-for="Salary" class="text-danger m-2"></span>
                    </div>
                    <div class=" mb-3 col-lg-12">
                        <label asp-for="Description" class="ms-2 text-muted"></label>
                        <textarea disabled asp-for="Description" class="form-control" id="floatingInputDescription" placeholder=""></textarea>
                        <span asp-validation-for="Description" class="text-danger m-2"></span>
                    </div>
                    <div class=" mb-3 col-lg-12">
                        <label asp-for="Requirements" class="ms-2 text-muted"></label>
                        <textarea disabled asp-for="Requirements" class="form-control" id="floatingInputDescription" placeholder=""></textarea>
                        <span asp-validation-for="Requirements" class="text-danger m-2"></span>
                    </div>
                    <div class=" mb-3 col-lg-12">
                        <label asp-for="Benefits" class="ms-2 text-muted"></label>
                        <textarea disabled asp-for="Benefits" class="form-control" id="floatingInputDescription" placeholder=""></textarea>
                        <span asp-validation-for="Benefits" class="text-danger m-2"></span>
                    </div>
                    


                    <div class="form-floating mb-3 col-lg-6">
                        <input readonly asp-for="ExpiredDate" type="datetime" class="form-control" id="floatingInputCreate" placeholder="">
                        <label asp-for="ExpiredDate" for="floatingInputCreate"></label>
                        <span asp-validation-for="ExpiredDate" class="text-danger m-2"></span>
                    </div>
                    <div class="form-floating mb-3 col-lg-6">
                        <input readonly asp-for="CreateOn" type="datetime" class="form-control" id="floatingInputCreate" placeholder="">
                        <label asp-for="CreateOn" for="floatingInputCreate"></label>
                        <span asp-validation-for="CreateOn" class="text-danger m-2"></span>
                    </div>

                    @* <button type="submit" class="btn btn-primary">Create</button> *@
                    <div>
                        <a asp-controller="Job" asp-action="Index" class="btn btn-danger">Back To List</a>
                        <a asp-controller="Job" asp-action="Accept" asp-route-id="@Model.Id" class="btn btn-danger">Accept job</a>
                        <a asp-controller="Job" asp-action="Refuse" asp-route-id="@Model.Id" class="btn btn-danger">Refuse job</a>
                    </div>
                </form>
            </div>
        </div>
       
    </div>
</div>


@section Scripts {
    <!-- Place the following <script> and <textarea> tags your HTML's <body> -->
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap codesample emoticons image link lists media searchreplace table visualblocks wordcount',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | link image media table | align lineheight | numlist bullist indent outdent | emoticons charmap | removeformat',
            // Lắng nghe sự kiện 'blur' của TinyMCE
            setup: function (editor) {
                editor.on('blur', function () {
                    checkDes();
                });
            }

        });
    </script>

    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

